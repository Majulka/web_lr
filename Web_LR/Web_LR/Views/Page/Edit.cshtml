@model Smarttrading_gb.Models.PageRoute
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";    
}
<h2>
    Pages</h2>
<div>
    <a href="/Admin">Zpět na administraci</a></div>
    <br />
    <div>
    <a href="/Page/Index">Zpět</a>
    </div>
@using (Html.BeginForm())
{
    <div class="fields">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.PageAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PageAddress)
            @Html.ValidationMessageFor(model => model.PageAddress)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PageName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PageName)
            @Html.ValidationMessageFor(model => model.PageName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Culture, "Culture")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Culture")
            @Html.ValidationMessageFor(model => model.Culture)
        </div>
        <p>
            <a href="/PageContent/History/@Model.Id">Historie změn</a>
        </p>
        <p>
            <a href="/PageContent/Index/@Model.Id">Editovat obsah stránky</a>
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>
    </div>
}
