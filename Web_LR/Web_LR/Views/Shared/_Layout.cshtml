<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>LR @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")?@DateTime.Now.Millisecond.ToString()" rel="stylesheet" type="text/css" />
    <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/icon.ico")" />
    @RenderSection("Header", false)
</head>
<body>
    <header>
        @Html.Action("Render", "Header")
        <div class="clr">
        </div>
        <nav>
            @Html.Action("Render", "Menu")
        </nav>
        <div class="clr">
        </div>
    </header>
    <section id="mainContent">
        @RenderBody()
    </section>
    <div class="clr">
    </div>
    <footer>
    <div class="footerAdImage">
        @*<img src="@Url.Content("~/Content/images/euFooter.png")" alt="footer image" />*@
    </div>
    <div class="footerAddress">        
    Web LR</div>
    </footer>
    <div class="clr">
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.23.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.cycle.all.js")"></script>*@
    @RenderSection("Scripts", false)
</body>
</html>
