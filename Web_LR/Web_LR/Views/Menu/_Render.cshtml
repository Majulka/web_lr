@model IEnumerable<Web_LR.Models.Menu>
@{   
    Layout = null;
}
<ul>
    @foreach (var item in Model)
    {
        string pageAddress = item.PageRoute.PageAddress;
        if (pageAddress.Equals(string.Empty))
        {
            pageAddress ="/";
        }
        <li><a href="@pageAddress" title="@item.PageRoute.PageName">@item.Name</a>
        </li> 
            
